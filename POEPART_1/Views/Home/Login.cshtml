<!-- Login Form -->
<div class="login-container">
    <div class="login-box">
        <h2>Login</h2>
        <p class="login-subtitle">Please sign in or <a href="@Url.Action("Home", "Home")"> click here</a> to access your dashboard </p>

        <form>
            <div class="form-group">
                <label for="username">Email / Username</label>
                <input type="text" id="username" name="username" required />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required />
            </div>

            <div class="form-group">
                <label for="role">Select Role</label>
                <select id="role" name="role" required>
                    <option value="">-- Choose a Role --</option>
                    <option value="Lecture">Lecture</option>
                    <option value="Programme Coordinator">Programme Coordinator</option>
                    <option value="Academic Manager">Academic Manager</option>
                </select>
            </div>

            <button type="submit" class="btn-primary">Login</button>

            <p class="extra-links">
                <a href="#">Forgot Password?</a>
            </p>
        </form>
    </div>
</div>


