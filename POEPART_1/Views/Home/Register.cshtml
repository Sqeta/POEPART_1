@model POEPART_1.Models.Register


<link rel="stylesheet" href="~/css/Styles.css" />

<nav class="navigations">
    <h3>Contract Monthly Claim System</h3>
</nav>

<div class="login-container">
    <div class="login-box">
        <h2>Register</h2>
        <p class="login-subtitle">
            Create a new account or <a href="@Url.Action("Login", "Home")">click here</a> to sign in.
        </p>

        <form asp-action="Register" method="post">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name"  asp-for="full_names" />
                <span asp-validation-for="full_names"></span>
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" asp-for="email_address"  />
                <span asp-validation-for="email_address"></span>
            </div>


            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" asp-for="password" />
                <span asp-validation-for="password"></span>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" id="confirmPassword" asp-for="confirm_password" />
                <span asp-validation-for="confirm_password"></span>
            </div>

            <div class="form-group">
                <label for="role">Select Role</label>
                <select id="role" asp-for="role">
                    <option value="">-- Choose a Role --</option>
                    <option value="Lecture">Lecture</option>
                    <option value="Programme Coordinator">Programme Coordinator</option>
                    <option value="Academic Manager">Academic Manager</option>
                </select>
                <span asp-validation-for="role"></span>
            </div>

            <button type="submit" class="btn-primary">Register</button>

            <p class="extra-links">
                Already have an account? <a href="@Url.Action("Login", "Home")">Login here</a>
            </p>
        </form>
    </div>
</div>

<footer class="footer">
    <p>&copy; @DateTime.Now.Year Contract Monthly Claim System. All rights reserved.</p>
</footer>