    <!-- Quick actions -->
    <div class="manager-actions">
        <a href="@Url.Action("ViewApprove","Home")" class="action-btn"> View & Approve Claims</a>
        <a href="@Url.Action("GenerateReport","Home")" class="action-btn"> Generate Claim Report</a>
